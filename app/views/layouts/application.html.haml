!!! 5
%html{'ng-app' => "rbMenuDemoApp"}
%head
  %title rbMenu DemoApp
  %script{'src'=>"https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"}
  %script{'src'=>"https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"}
  %link{'rel'=>"stylesheet", 'href'=>"https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css" }
  %script{'src'=>"//tinymce.cachefly.net/4.0/tinymce.min.js"}
  %script{'src'=>"https://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular.min.js"}
  %script{'src'=>"https://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular-animate.min.js"}
  %script{'src'=>"https://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular-resource.min.js"}
  %script= render "/shared/cdn_fail.js"
  = stylesheet_link_tag    "application", media: "all"
  = javascript_include_tag "application"
  = csrf_meta_tags
  %base{'href'=>"/"}
  %link{'rel'=>"shortcut icon", 'href'=> "#{image_url('favicon.ico')}", 'type'=>"image/x-icon"}
  %link{'rel'=>"icon", 'href'=> "#{image_url('favicon.ico')}", 'type'=>"image/x-icon"}
  %link{:href=>"//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css", :rel=>"stylesheet"}
  -#%meta{'name'=>"viewport", 'content'=>"width=device-width, initial-scale=1.0"}
  -#%script
    =render "/shared/google_analytics.js"
%body.ng-cloak{'ng-controller'=>"topMenuController"}
  .mytopbar
    %rb-menu{ 'config'=>'menu_config', 'menu' => 'topMenu','force-small-screen' => 'forceSmallScreen'}
  .view-content{'ng-class' => "{'top-padding' : hasTopBar}"}
    = yield

